<section class="row-fluid records content-area" style="padding:0px; margin-top:0px;">
    <div id="timeline-embed">
      <div id="timeline"></div>
    </div>
</section>

<script type="text/javascript">
$(document).ready(function() {

	var timeline = <%= child_timeline_json(@child) %>

    createStoryJS({
      // debug: true,
    	type: "timeline",
			width:      '100%',
			height:     '400',
			js: '/assets/timeline.js',
			css:  '/assets/timeline.css',
			source: timeline,
			embed_id:   'timeline-embed',
            start_at_end:       true,
            start_zoom_adjust:  '2'
    });

});
</script>