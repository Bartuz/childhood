<div class="hero-blurb" style="margin: 0 auto; width:900px;">

  <h2><%= link_to "My Family", families_path %> > <%= @child.first_name %></h2>

  <%= render "profile" %>

  <ul class="nav nav-tabs" id="myTab">
    <li class="active" data-toggle="tab">
      <a href="#timeline">Timeline View</a>
    </li>
    <li data-toggle="tab">
      <a href="#activity">List View</a>
    </li>
  </ul>

  <div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="timeline">
      <%= render "activity_timeline" %>
    </div>
    <div class="tab-pane fade" id="activity">
      <%= render "activity_list" %>
    </div>
  </div>

</div>

<script>
    $(document).ready(function() {
        $('#myTab a').click(function (e) {
            e.preventDefault();
            $(this).tab('show');
        })
    });
</script>
