  <h2>My Family > <%= @child.first_name %></h2>

  <section class="profile">
    <%= image_tag asset_path "avatars/" + @child.picture_url %>
    <dl class="horizontal">
      <dt>Name</dt>
      <dd><%= @child.first_name %> <%= @child.last_name %></dd>
      <dt>Date of Birth</dt>
      <dd><%= @child.birthdate.strftime("%B %d, %Y") %></dd>
      <dt>Known Health Concerns</dt>
      <dd><%= format_health_notes(@child) %></dd>
      <dt>Home Address</dt>
      <dd><%= format_address(@child) %></dd>
    </dl>
  </section>

  <section class="records">
    <ul class="nav nav-tabs" id="recordTabs">
      <li class="active"><a href="#timeline">Timeline</a></li>
      <li><a href="#list">List</a></li>
      <li><a href="#messages">Messages</a></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="timeline">
        <div id="timeline-embed">
          <div id="timeline"></div>
        </div>
      </div>
      <div class="tab-pane" id="list">
        !! Show list of events !!
      </div>
      <div class="tab-pane" id="messages">
        !! Show list of messages !!
      </div>
      
    </div>

  </section>

  <script type="text/javascript">
	$(document).ready(function() {

		var timeline = <%= child_timeline_json(@child) %>

	    createStoryJS({
        // debug: true,
	    	type: "timeline",
  			width:      '100%',
  			height:     '400',
  			js: '/assets/timeline.js',
  			css:  '/assets/timeline.css',
  			source: timeline,
  			embed_id:   'timeline-embed'
  		});

      $('#recordTabs a').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
      });
	});
  </script>
</div>
