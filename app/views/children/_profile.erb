<section class="row-fluid profile content-area">
  <aside class="current-educator">
      <%= image_tag(asset_path("avatars/teacher.jpg"), :class => "educator-pic") %>
<a href="#sendMessage" role="button" class="button" data-toggle="modal">Send Erin a message</a>
 </aside>
  <%= image_tag asset_path "avatars/" + @child.picture_url %>
  <dl>
    <dt>Name</dt>
    <dd><%= @child.first_name %> <%= @child.last_name %></dd>
    <dt>Educational Setting</dt>
    <dd><%= @child.educational_setting %></dd>
    <dt>Date of Birth</dt>
    <dd><%= @child.birthdate.strftime("%B %d, %Y") %></dd>
    <dt>Known Health Concerns</dt>
    <dd><%= format_health_notes(@child) %></dd>
    <dt>Home Address</dt>
    <dd><%= format_address(@child) %></dd>
  </dl>

  <div class="clearfix"></div>
</section>

<!-- Button to trigger modal -->

 
<!-- Modal -->
<div id="sendMessage" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="sendMessageLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="sendMessageLabel">Send a message to Erin</h3>
  </div>
  <div class="modal-body">
    <p>What would you like to say?</p>
    <textarea rows="5" style="width:90%"></textarea>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary" data-dismiss="modal">Send</button>
  </div>
</div>