<ul class="nav nav-tabs">
  <li class="active">
    <a href="#activity">Log Activity</a>
  </li>
</ul>

<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in" id="activity">
    <%= form_tag(:controller => "children", :action => "log_activity", :method => "post", :class => "form-horizontal") do %>
        <fieldset>
          <div class="form-group">
            <label for="domain"><%= @category_name %></label>
            <%= select_tag "domain", options_from_collection_for_select(@parent_categories, "id", "name"), :class => "form-control"  %>
          </div>
          <% if @hide_subcategory %>
              <div class="form-group">
                <label for="skill">Skill</label>
                <%= select_tag "skill", options_from_collection_for_select(@sub_categories, "id", "name"), :class => "form-control"  %>
              </div>
          <% end %>

          <div class="form-group">
            <label for="indicator"><%= @note_name %></label>
            <%= text_area_tag(:indicator, "", :class => "form-control") %>
          </div>

          <div class="form-group">
            <label for="observation">Observation</label>
            <%= text_area_tag(:observation, "", :class => "form-control") %>
          </div>
          <div class="form-group">
            <label for="interpretation">Interpretation</label>
            <%= text_area_tag(:interpretation, "", :class => "form-control") %>
          </div>
          <%= hidden_field_tag(:child_id, @child.id) %>
          <%= hidden_field_tag(:parent_id, "5") %>
          <button type="submit" class="btn btn-default">Save Draft</button>
          <button type="submit" class="btn btn-default">Publish Activity</button>
          <% flash.each do |name, msg| %>
              <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
                <a class="close" data-dismiss="alert">Ã—</a>
                <%= msg %>
              </div>
          <% end %>
        </fieldset>
    <% end %>
  </div>
</div>